<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <span class="glyphicon glyphicon-thumbs-up"><%= pluralize micropost.reputation_for(:votes).to_i, "Like" %>
    <% if current_user && !current_user.voted_for?(micropost) %>
      <%= link_to "Like", vote_micropost_path(micropost, type: "Like"), method: "post" %>
     <% end %> 
      
    <% if current_user?(micropost.user) %>
    <%= link_to "| Delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  
</li>